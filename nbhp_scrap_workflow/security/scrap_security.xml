<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Users Access Rules -->
        <record id="nbhp_stock_scrap_user" model="ir.rule">
            <field name="name">User: own documents only</field>
            <field name="model_id" ref="stock.model_stock_scrap" />
            <field name="domain_force">
                ['|',('requester_id.user_id','=',user.id),('requester_id.user_id','=',False)]</field>
            <field name="groups" eval="[(4, ref('nbhp_scrap_workflow.group_scrap_user'))]" />
        </record>

        <record id="nbhp_stock_scrap_hod" model="ir.rule">
            <field name="name">HOD: View Department Scrap Request</field>
            <field name="model_id" ref="stock.model_stock_scrap" />
            <field name="domain_force">
                ['|',('requester_department_id.manager_id.user_id','=',user.id),('requester_department_id.manager_id.user_id','=',False)]</field>
            <field name="groups" eval="[(4, ref('nbhp_scrap_workflow.group_scrap_user'))]" />
        </record>

        <record id="nbhp_stock_scrap_all" model="ir.rule">
            <field name="name">Administrator: See All Scrap</field>
            <field name="model_id" ref="stock.model_stock_scrap" />
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups"
                eval="[(4, ref('nbhp_scrap_workflow.group_scrap_admin'))]" />
        </record>
        <!-- <field name="groups"
                eval="[(4, ref('account.group_account_manager','idl_scrap_workflow.group_iac'))]" /> -->

    </data>
</odoo>