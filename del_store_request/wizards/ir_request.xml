<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="store_requisition_wizard">
			<field name="name">Store Requisition wizard</field>
			<field name="model">store.wizard</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group string="Reason">
							<field name="reason" nolabel="1"/>
						</group>
					</sheet>
					<footer>
						<button name="reject" string="Confirm" type="object" class="oe_highlight"/>
						<button special="cancel" string="Cancel"  class="oe_link"/>
					</footer>
				</form>
			</field>
    </record>
	</data>
</odoo>