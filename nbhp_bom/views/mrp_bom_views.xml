<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="nbhp_mrp_bom_tree_view" model="ir.ui.view">
            <field name="name">nbhp.mrp.bom.tree</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_tree_view" />
            <field name="arch" type="xml">
                <field name="sequence" position="after">
                    <field name="bom_sequence" />
                </field>
            </field>
        </record>

        <record id="nbhp_mrp_bom_form_view" model="ir.ui.view">
            <field name="name">nbhp.mrp.bom.form</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
            <field name="arch" type="xml">

                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="button_submit" states="draft" string="Submit" type="object" />
                        <button name="button_cancel" states="draft" string="Cancel" type="object" />
                        <button name="button_confirm" states="submit" string="Approve" type="object"
                            groups="nbhp_base.group_production_manager" />
                        <button name="button_reject" states="submit" string="Reject" type="object"
                            class="btn-danger" groups="nbhp_base.group_production_manager" />
                        <button name="button_reset" states="confirmed" string="Reset" type="object"
                            class="btn-primary" groups="nbhp_base.group_production_manager" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"
                            readonly="1" />
                    </header>
                </xpath>

                <xpath expr="//widget[@name='web_ribbon']" position="after">
                    <div class="oe_title">
                        <label for="bom_sequence" class="oe_edit_only" />
                        <h1>
                            <field name="bom_sequence" />
                        </h1>
                    </div>
                </xpath>

                <field name="product_tmpl_id" position="replace">
                    <field name="product_tmpl_id" context="{'default_detailed_type': 'product'}"
                        attrs="{'readonly' : [('state', '=', 'confirmed')]}" />
                </field>
                <field name="product_id" position="replace">
                    <field name="product_id" groups="product.group_product_variant"
                        context="{'default_detailed_type': 'product'}"
                        attrs="{'readonly' : [('state', '=', 'confirmed')]}" />
                </field>
                <field name="product_qty" position="replace">
                    <field name="product_qty" attrs="{'readonly' : [('state', '=', 'confirmed')]}" />
                </field>
                <field name="product_uom_id" position="replace">
                    <field name="product_uom_id" options="{'no_open':True,'no_create':True}"
                        groups="uom.group_uom" attrs="{'readonly' : [('state', '=', 'confirmed')]}" />
                </field>
                <field name="type" position="replace">
                    <field name="type" widget="radio"
                        attrs="{'readonly' : [('state', '=', 'confirmed')]}" />
                </field>

            </field>
        </record>

    </data>
</odoo>