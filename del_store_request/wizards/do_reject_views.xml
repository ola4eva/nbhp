<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="material_request_reject_view_form" model="ir.ui.view">
            <field name="name">material.request.reject.view.form</field>
            <field name="model">material.request.reject</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="material_request_id"/>
                            <field name="reason" />
                        </group>
                    </sheet>
                    <footer>
                        <button type="object" name="confirm_rejection" string="Proceed" class="oe_highlight" attrs="{'invisible': [('reason','=',False)]}" />
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>

</odoo>
