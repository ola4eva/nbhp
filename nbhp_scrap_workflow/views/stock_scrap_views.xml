<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="nbhp_stock_scrap_form_view" model="ir.ui.view">
            <field name="name">nbhp.stock.scrap.form</field>
            <field name="model">stock.scrap</field>
            <field name="inherit_id" ref="stock.stock_scrap_form_view" />
            <field name="arch" type="xml">

                <xpath expr="//header/field[@name='state']" position="attributes">
                    <attribute name="statusbar_visible">new,submit,hod,done</attribute>
                </xpath>

                <xpath expr="//header" position="inside">
                    <button name="button_submit" string="Submit" type="object" states="new"
                        groups="nbhp_scrap_workflow.group_scrap_user" />
                    <button name="button_hod_approve" string="Approve" type="object"
                        class="oe_highlight" states="submit"
                        groups="nbhp_scrap_workflow.group_scrap_manager" />
                    <button name="button_reject" string="Reject" type="object"
                        class="btn btn-danger" states="submit"
                        groups="nbhp_scrap_workflow.group_scrap_manager" />
                    <button name="button_admin_approve" string="Approve" type="object"
                        class="oe_highlight" states="hod"
                        groups="nbhp_scrap_workflow.group_scrap_admin" />
                    <button name="button_reject" string="Reject" type="object"
                        class="btn btn-danger" states="hod"
                        groups="nbhp_scrap_workflow.group_scrap_admin" />
                    <button name="button_reset" string="Set to Draft" type="object" states="reject" />
                </xpath>

                <xpath expr="//header//button[@name='action_validate']" position="attributes">
                    <attribute name="groups">nbhp_scrap_workflow.group_scrap_admin</attribute>
                    <attribute name="invisible">1</attribute>
                </xpath>

                <field name="origin" position="after">
                    <field name="requester_id" />
                    <field name="requester_department_id" />
                    <field name="requester_hod_id" />
                </field>

            </field>
        </record>

    </data>
</odoo>